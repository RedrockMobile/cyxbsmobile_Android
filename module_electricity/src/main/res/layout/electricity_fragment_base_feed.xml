<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:textColor="@color/config_level_two_font_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/electricity_inquire_string" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:textColor="@color/config_level_two_font_color"
                android:textSize="8sp" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_feed_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:alpha="0.54"
            android:textColor="@color/config_level_two_font_color"
            android:textSize="10sp"
            tools:text="2019.8.22抄表" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_feed_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <include layout="@layout/electricity_discover_feed" />

</androidx.appcompat.widget.LinearLayoutCompat>