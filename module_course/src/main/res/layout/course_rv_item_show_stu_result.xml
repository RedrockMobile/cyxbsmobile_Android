<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/course_iv_item_show_stu_result_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/config_ic_default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/course_tv_item_show_stu_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/config_level_two_font_color"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:layout_gravity="top|start"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toEndOf="@+id/course_iv_item_show_stu_result_avatar"
        app:layout_constraintTop_toTopOf="@+id/course_iv_item_show_stu_result_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/course_iv_item_show_stu_result_avatar"
        tools:text="丁德桥" />

    <TextView
        android:id="@+id/course_tv_item_show_stu_result_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/config_level_two_font_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/course_view_item_show_stu_result_link"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintTop_toBottomOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程软件工程" />

    <TextView
        android:id="@+id/course_tv_item_show_stu_result_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        tools:text="2018214306"
        app:layout_constraintTop_toTopOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintBottom_toBottomOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintStart_toEndOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--用于扩大点击范围-->
    <View
        android:id="@+id/course_view_item_show_stu_result_link"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/course_iv_item_show_stu_result_link"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_item_show_stu_result_link"
        app:layout_constraintStart_toStartOf="@id/course_iv_item_show_stu_result_link"
        app:layout_constraintEnd_toEndOf="@id/course_iv_item_show_stu_result_link"/>

    <ImageView
        android:id="@+id/course_iv_item_show_stu_result_link"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="@id/course_tv_item_show_stu_result_content"
        app:layout_constraintEnd_toEndOf="@id/course_tv_item_show_stu_result_num"
        tools:ignore="ContentDescription"
        tools:src="@drawable/course_ic_find_course_link_head_no"/>

    <View
        android:background="@color/config_level_four_font_color"
        android:alpha="0.1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/course_tv_item_show_stu_result_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>